               <Label layoutX="14.0" layoutY="286.0" text="Tournament Start Date:" />
               <DatePicker editable="false" layoutX="145.0" layoutY="282.0" promptText="Start Date" />
               <Label layoutX="16.0" layoutY="328.0" text="Tournament End Date:" />
               <DatePicker editable="false" layoutX="145.0" layoutY="324.0" promptText="End Date" />
            </children></AnchorPane>
        </Scene>
    </scene>

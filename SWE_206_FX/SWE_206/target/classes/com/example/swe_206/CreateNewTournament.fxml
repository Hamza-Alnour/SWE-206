               <Label layoutX="14.0" layoutY="105.0" text="Participation Type:" />
               <RadioButton layoutX="125.0" layoutY="105.0" mnemonicParsing="false" selected="true" text="Single">
                  <toggleGroup>
                     <ToggleGroup fx:id="A" />
                  </toggleGroup>
               </RadioButton>
               <RadioButton layoutX="247.0" layoutY="105.0" mnemonicParsing="false" text="Teams" toggleGroup="$A" />
               <Label layoutX="15.0" layoutY="150.0" text="Tournament Type:" />
               <RadioButton layoutX="125.0" layoutY="150.0" mnemonicParsing="false" selected="true" text="Elimination">
